<p style="color: green"><%= notice %></p>
<h1>Colaborators</h1>
<%= link_to "New colaborator", new_colaborator_path %>
<hr>
<div id="colaborators" class="row row-cols-1 row-cols-md-3 g-4
">
  <% @colaborators.each do |colaborator| %>
    <div class="col">
      <div class="card" style="height: 10rem;">
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to colaborator do %>
              <%= colaborator.name %>
            <% end %>
          </h5>
          <p class="card-text"><%= truncate(colaborator.byo, length: 100) %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%=raw pagy_nav(@pagy)%>
